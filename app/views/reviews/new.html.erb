<h1>New Review</h1>
<div class="row">
		<div class="col-md-3">
			<div class="well">
				<%= image_tag @restaurant.image_url %>
				<p>
					<h3>
						<%= @restaurant.name %>
					</h3>
					<div class="star-rating" data-score=<%= @avg_rating %> ></div>
					<% if !@reviews.blank? %>
						<%= pluralize(@reviews.size, 'review') %>
					<% end %>
				</p>
				<p>
				  <strong>Address:</strong>
				  <%= @restaurant.address %>
				</p>
				<p>
				  <strong>Phone:</strong>
				  <%= @restaurant.phone %>
				</p>
				<p>
				  <strong>Website:</strong>
				  <%= link_to @restaurant.website, @restaurant.website %>
				</p>
				<p>
					<%= link_to 'Back', restaurant_path(@restaurant) %>
				</p>
			</div>
	</div>

	<div class="col-md-9">
		<%= render 'form' %>
	</div>

</div>